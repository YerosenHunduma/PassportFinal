<%- include('./layouts/header') %>

<h1>Profile</h1>
<div>
  <table border="1">
    <tr>
      <th>USERNAME</th>
      <th>ID</th>
      <th>EMAIL</th>
      <th>ROLE</th>
    </tr>
    <tr>
      <td><%= user.username %></td>

      <td><%= user._id %></td>

      <td><%= user.email %></td>

      <td><%= user.role %></td>
    </tr>
  </table>
</div>

<% if (user.role === 'STUDENT' || 'INSTRUCTOR') { %>
<div>
  <H3>ENROLLED COURSES</H3>
  <table border="1">
    <thead>
      <th>Course Name</th>
      <th>Course Code</th>
      <% if (user.role === 'STUDENT') { %>
      <th>Grade</th>
      <% } %>
    </thead>
    <tbody>
      <% courseDetails.forEach((course) => { %>
      <tr>
        <td><%= course.courseName %></td>
        <td><%= course.courseCode %></td>
        <% if (user.role === 'STUDENT') { %>
        <td><%= course.grade%></td>
        <% } %>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
<% } %> <%- include('./layouts/footer') %>
